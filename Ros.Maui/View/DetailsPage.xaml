<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Ros.Maui.ViewModel"
             x:DataType="viewmodel:AssetDetailsViewModel"
             x:Class="Ros.Maui.View.DetailsPage"
             Title="{Binding Asset.Name}">
    <ScrollView>
        <VerticalStackLayout
            Padding="12">
            <Label
                Text="{Binding Asset.SerialNumber, StringFormat='Serijski broj: {0}'}"
                TextColor="Black"
                Style="{StaticResource MediumLabel}"/>
            <Label
                Text="{Binding Asset.Name, StringFormat='Naziv sredstva: {0}'}"
                TextColor="Black"
                Style="{StaticResource MediumLabel}"/>
            <Label
                Text="{Binding Asset.ParentAsset, StringFormat='Nadredjeno sredstvo: {0}'}"
                TextColor="Black"
                Style="{StaticResource SmallLabel}"/>
            <Label
                Text="{Binding Asset.SAPInventoryNumber, StringFormat='Inventarski broj: {0}'}"
                TextColor="Black"
                Style="{StaticResource SmallLabel}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>