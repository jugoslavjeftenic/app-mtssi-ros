<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Ros.CoreBusiness;assembly=Ros.CoreBusiness"
             x:Class="Ros.Maui.View.MainPage"
             Title="ROS">

    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:Sredstvo}">
                <model:Sredstvo
                    Id="1"
                    SerijskiBroj="XY123"
                    Naziv="Racunar"
                    NadredjenoSredstvo="10001"
                    SAPInventarniBroj="20000001"/>
                <model:Sredstvo
                    Id="2"
                    SerijskiBroj="AB123"
                    Naziv="Racunar neki drugi"
                    NadredjenoSredstvo="10002"
                    SAPInventarniBroj="20000002"/>
                <model:Sredstvo
                    Id="3"
                    SerijskiBroj="XY123AB"
                    Naziv="Lapatop"
                    NadredjenoSredstvo="10003"
                    SAPInventarniBroj="20000003"/>
                <model:Sredstvo
                    Id="4"
                    SerijskiBroj="123XAB"
                    Naziv="Desktop"
                    NadredjenoSredstvo="10004"
                    SAPInventarniBroj="20000004"/>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Sredstvo">
                <VerticalStackLayout
                    Padding="10"
                    Spacing="4">
                    <Label Text="{Binding Naziv}" FontSize="24"/>
                    <Label FontSize="12">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0} | {1}">
                                <Binding Path="SerijskiBroj"/>
                                <Binding Path="SAPInventarniBroj"/>
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>